@model RoleToReturnDTO

@{
    ViewData["Title"] = "Delete Role";
}

<div class="nova-page-header">
    <h1 class="nova-page-title">Delete Role</h1>
</div>

<div class="nova-card">
    <div class="nova-card-body">
        <div class="nova-card-header">
            <h3 class="nova-mb-0 nova-text-danger">Are you sure you want to delete this employee?</h3>
        </div>

        <form asp-action="Delete" method="post">
            <div asp-validation-summary="ModelOnly" class="nova-alert nova-alert-danger"></div>
            <partial name="PartialViews/_DetailsDeleteRolePartialView" />

            <div class="nova-flex nova-gap-2 nova-mt-4">
                <button type="submit" class="nova-btn nova-btn-danger">
                    <i class="fas fa-trash"></i> Delete
                </button>
                <a asp-action="Index" class="nova-btn nova-btn-outline">Cancel</a>
            </div>
        </form>
    </div>
</div>

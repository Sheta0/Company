@model RoleToReturnDTO

@{
    ViewData["Title"] = "Edit Role";
}

<div class="nova-page-header">
    <h1 class="nova-page-title">Edit Role</h1>
    <div class="nova-page-actions">
        <a asp-action="AddOrRemoveUsers" asp-route-roleId="@Model.Id" class="nova-btn nova-btn-secondary">
            <i class="fas fa-users-cog"></i> Manage Users
        </a>
        <a asp-action="Index" class="nova-btn nova-btn-outline">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>
</div>

@if (!string.IsNullOrEmpty(TempData["Message"] as string))
{
    <div class="nova-alert nova-alert-info">
        @TempData["Message"]
    </div>
}

<div class="nova-card">
    <div class="nova-card-body">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="nova-alert nova-alert-danger"></div>

            <partial name="PartialViews/_CreateEditRolePartialView" />

            <div class="nova-flex nova-gap-2 nova-mt-4">
                <button type="submit" class="nova-btn nova-btn-primary">
                    <i class="fas fa-save"></i> Update
                </button>
                <a asp-action="Index" class="nova-btn nova-btn-outline">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

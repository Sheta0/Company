@model RoleToReturnDTO

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center my-4">Edit Role</h1>

@if (!string.IsNullOrEmpty(TempData["Message"] as string))
{
<div class="alert alert-info">
    @TempData["Message"]
</div>
}


<div class="container">
    <form asp-action="Edit" enctype="multipart/form-data">
        <div asp-validation-summary="All"></div>
        <partial name="PartialViews/_CreateEditRolePartialView" />

        <a asp-action="AddOrRemoveUsers" asp-route-roleId = "@Model.Id" class="btn btn-outline-info mt-4">Add or Remove Users</a>

        <div class="d-flex justify-content-start gap-3 my-4">
            <input type="submit" value="Submit" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-light">Back to List</a>
        </div>
    </form>
</div>

@section ValidationScriptSection {
    <partial name="_ValidationScriptsPartial" />
}
@model EmployeeDTO

@{
    ViewData["Title"] = "Delete Employee";
}

<div class="nova-page-header">
    <h1 class="nova-page-title">Delete Employee</h1>
    <div class="nova-page-actions">
        <a asp-action="Index" class="nova-btn nova-btn-outline">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>
</div>

<div class="nova-card">
    <div class="nova-card-header">
        <h3 class="nova-mb-0 nova-text-danger">Are you sure you want to delete this employee?</h3>
    </div>

    <div class="nova-card-body">
        <div class="nova-grid" style="grid-template-columns: 250px 1fr; gap: 2rem;">
            <div>
                <img src="~/files/images/@Model.ImageName" class="nova-rounded" style="width: 100%; max-width: 250px; object-fit: cover;" />
            </div>

            <div>

                <form asp-action="Delete" method="post" class="nova-mt-4">
                <partial name="PartialViews/_DetailsDeleteEmployeePartialView" />
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="ImageName" />
                    <input type="hidden" asp-for="IsDeleted" />
                    <input type="hidden" asp-for="CreateAt" />
                    <div class="nova-flex nova-gap-2">
                        <button type="submit" class="nova-btn nova-btn-danger">
                            <i class="fas fa-trash"></i> Delete
                        </button>
                        <a asp-action="Index" class="nova-btn nova-btn-outline">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@model EmployeeDTO

@inject IDepartmentRepository _departmentRepository

@{
    // var Departments = new SelectList(ViewBag.Departments as List<Department>, "Id", "Name");
    var Departments = new SelectList(_departmentRepository.GetAll(), "Id", "Name");
}

<div class="form-group">
    <label class="col-form-label" asp-for="EmpName"></label>
    <input asp-for="EmpName" class="form-control" />
    <span asp-validation-for="EmpName" class="text-danger"></span>
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="Age"></label>
    <input asp-for="Age" class="form-control" />
    <span asp-validation-for="Age" class="text-danger"></span>
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="Email"></label>
    <input asp-for="Email" class="form-control" />
    <span asp-validation-for="Email" class="text-danger"></span>
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="Address"></label>
    <input asp-for="Address" class="form-control" />
    <span asp-validation-for="Address" class="text-danger"></span>
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="Phone"></label>
    <input asp-for="Phone" class="form-control" />
    <span asp-validation-for="Phone" class="text-danger"></span>
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="Salary"></label>
    <input asp-for="Salary" class="form-control" />
    <span asp-validation-for="Salary" class="text-danger"></span>
</div>

<div class="form-group">
    <input asp-for="IsActive" class="form-check" />
    <label class="col-form-label" asp-for="IsActive"></label>
</div>

<div class="form-group">
    <input asp-for="IsDeleted" class="form-check" />
    <label class="col-form-label" asp-for="IsDeleted"></label>
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="HiringDate"></label>
    <input asp-for="HiringDate" class="form-control" />
    <span asp-validation-for="HiringDate" class="text-danger"></span>
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="CreateAt"></label>
    <input asp-for="CreateAt" class="form-control" />
    <span asp-validation-for="CreateAt" class="text-danger"></span>
</div>

<div class="form-group">
    <label class="col-form-label" asp-for="DepartmentId"></label>
    <select asp-for="DepartmentId" asp-items="Departments" class="form-control">
        <option value="">Select Department</option>
    </select>
</div>

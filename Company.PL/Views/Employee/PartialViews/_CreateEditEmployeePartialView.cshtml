@model EmployeeDTO

@inject IDepartmentRepository _departmentRepository

@{
    // var Departments = new SelectList(ViewBag.Departments as List<Department>, "Id", "Name");
    var Departments = new SelectList(await _departmentRepository.GetAllAsync(), "Id", "Name");
}
<div class="nova-grid" style="grid-template-columns: repeat(2, 1fr); gap: 1rem;">
    <div class="nova-form-group">
        <label asp-for="EmpName" class="nova-label"></label>
        <input asp-for="EmpName" class="nova-input" />
        <span asp-validation-for="EmpName" class="nova-validation-error"></span>
    </div>

    <div class="nova-form-group">
        <label asp-for="Age" class="nova-label"></label>
        <input asp-for="Age" class="nova-input" type="number" />
        <span asp-validation-for="Age" class="nova-validation-error"></span>
    </div>

    <div class="nova-form-group">
        <label asp-for="Email" class="nova-label"></label>
        <input asp-for="Email" class="nova-input" type="email" />
        <span asp-validation-for="Email" class="nova-validation-error"></span>
    </div>

    <div class="nova-form-group">
        <label asp-for="Phone" class="nova-label"></label>
        <input asp-for="Phone" class="nova-input" />
        <span asp-validation-for="Phone" class="nova-validation-error"></span>
    </div>

    <div class="nova-form-group">
        <label asp-for="Address" class="nova-label"></label>
        <input asp-for="Address" class="nova-input" />
        <span asp-validation-for="Address" class="nova-validation-error"></span>
    </div>

    <div class="nova-form-group">
        <label asp-for="Salary" class="nova-label"></label>
        <input asp-for="Salary" class="nova-input" type="number" step="0.01" />
        <span asp-validation-for="Salary" class="nova-validation-error"></span>
    </div>

    <div class="nova-form-group">
        <label class="nova-label">Status</label>
        <div class="nova-form-check">
            <input asp-for="IsActive" class="nova-form-check-input" />
            <label asp-for="IsActive" class="nova-form-check-label"></label>
        </div>
        <span asp-validation-for="IsActive" class="nova-validation-error"></span>
    </div>

    <div class="nova-form-group">
        <label asp-for="HiringDate" class="nova-label"></label>
        <input asp-for="HiringDate" class="nova-input" type="date" />
        <span asp-validation-for="HiringDate" class="nova-validation-error"></span>
    </div>

    <div class="nova-form-group">
        <label asp-for="DepartmentId" class="nova-label"></label>
        <select asp-for="DepartmentId" asp-items="@Departments" class="nova-input">
            <option value="">-- Select Department --</option>
        </select>
        <span asp-validation-for="DepartmentId" class="nova-validation-error"></span>
    </div>

    <div class="nova-form-group">
        <label asp-for="Image" class="nova-label"></label>
        <input asp-for="Image" class="nova-input" type="file" accept="image/*" />
        <span asp-validation-for="Image" class="nova-validation-error"></span>
    </div>
</div>

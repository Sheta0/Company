@{
    ViewData["Title"] = "Check Your Phone";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="auth-form text-center">
    <h2 class="mb-4">Check Your Phone</h2>
    <p class="mb-4">We’ve sent a verification code to your phone. Please check your messages and follow the instructions.</p>
    <a asp-action="SignIn" class="btn btn-primary w-100">
        <i class="fas fa-arrow-left me-2"></i> Back to Login
    </a>
</div>

@model ResetPasswordDTO

@{
    ViewData["Title"] = "Reset Password";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<form asp-action="ResetPassword" method="post" class="needs-validation">
    @if (!ViewData.ModelState.IsValid)
    {
        <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>
    }

    <div class="form-group mb-4">
        <label asp-for="NewPassword" class="form-label">New Password</label>
        <div class="input-group">
            <span class="input-group-text">
                <i class="fas fa-lock"></i>
            </span>
            <input asp-for="NewPassword" class="form-control" placeholder="Enter your new password" required>
        </div>
        <span asp-validation-for="NewPassword" class="field-validation-error"></span>
    </div>

    <div class="form-group mb-4">
        <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
        <div class="input-group">
            <span class="input-group-text">
                <i class="fas fa-lock"></i>
            </span>
            <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm your password" required>
        </div>
        <span asp-validation-for="ConfirmPassword" class="field-validation-error"></span>
    </div>

    <div class="form-group mb-4">
        <button type="submit" class="btn btn-primary w-100">
            <i class="fas fa-key me-2"></i> Reset Password
        </button>
    </div>

    <div class="text-center mt-4">
        <p class="mb-0">
            <a asp-action="SignIn" class="link-primary fw-bold">Back to Login</a>
        </p>
    </div>
</form>

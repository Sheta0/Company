@model SignInDTO

@{
	ViewData["Title"] = "Login";
	Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-agileinfo">
	<div class="agileits-top">
		<form asp-action="SignIn" method="post">
			<div asp-validation-summary="All"></div>
			<input class="text" asp-for="Email" placeholder="Email" required>
			<input class="text" asp-for="Password" placeholder="Password" required>
			<div class="wthree-text">
				<label class="anim">
					<input asp-for="RememberMe" class="checkbox">
					<span>Remember Me</span>
				</label>
				<div class="clear"> </div>
			</div>
			<input type="submit" value="SIGNIN">
		</form>
		<br />
		<a asp-action="GoogleLogin" style="display: block; margin: 0 auto; text-align: center; color: white; width: 50%;">Login with Google</a>
		<a asp-action="FacebookLogin" style="display: block; margin: 0 auto; text-align: center; color: white; width: 50%;">Login with Facebook</a>
		<br />
		<p><a asp-action="ForgotPassword"> Forgot Password? </a></p>
		<p>Don't have an Account? <a asp-action="SignUp"> Sign up Now!</a></p>
	</div>
</div>

@section ValidationScriptSection {
	<partial name="_ValidationScriptsPartial" />
}



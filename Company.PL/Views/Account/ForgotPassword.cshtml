@model ForgotPasswordDTO

@{
    ViewData["Title"] = "Forgot Password";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<form asp-action="SendResetPasswordEmail" method="post" class="needs-validation">
    @if (!ViewData.ModelState.IsValid)
    {
        <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>
    }

    <div class="form-group mb-4">
        <label asp-for="Email" class="form-label">Email Address</label>
        <div class="input-group">
            <span class="input-group-text">
                <i class="fas fa-envelope"></i>
            </span>
            <input asp-for="Email" class="form-control" placeholder="Enter your email address" required>
        </div>
        <span asp-validation-for="Email" class="field-validation-error"></span>
    </div>

    <div class="form-group mb-4">
        <button type="submit" class="btn btn-primary w-100">
            <i class="fas fa-paper-plane me-2"></i> Send Reset Link
        </button>
    </div>

    <div class="text-center mt-4">
        <p class="mb-0">
            <a asp-action="SignIn" class="link-primary fw-bold">Back to Login</a>
        </p>
    </div>
</form>

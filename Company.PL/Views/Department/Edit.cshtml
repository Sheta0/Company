@model Department

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center my-4">Edit Department</h1>

<div class="container">
    <form asp-action="Edit">
        <div class="form-group">
            <label class="col-form-label" asp-for="Code"></label>
            <input asp-for="Code" class="form-control" />
            <span asp-validation-for="Code" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="col-form-label" asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group mb-4">
            <label class="col-form-label" asp-for="CreateAt"></label>
            <input asp-for="CreateAt" class="form-control" />
            <span asp-validation-for="CreateAt" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-start gap-3">
            <input type="submit" value="Save" class="btn btn-primary" />
            <a asp-action="Index" class="btn btn-light">Back to List</a>
        </div>
    </form>
</div>


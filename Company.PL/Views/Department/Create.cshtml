@model DepartmentDTO

@{
    ViewData["Title"] = "Create Department";
}

<div class="nova-page-header">
    <h1 class="nova-page-title">Create Department</h1>
</div>

<div class="nova-card">
    <div class="nova-card-body">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="nova-alert nova-alert-danger"></div>

            <partial name="PartialViews/_CreateEditDepartmentPartialView" />

            <div class="nova-flex nova-gap-2 nova-mt-4">
                <button type="submit" class="nova-btn nova-btn-primary">
                    <i class="fas fa-save"></i> Create
                </button>
                <a asp-action="Index" class="nova-btn nova-btn-outline">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@model Department

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center my-4">Department Details</h1>
<div class="container">
    <div class="form-group">
        <label class="col-form-label" asp-for="Code"></label>
        <input asp-for="Code" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="Name"></label>
        <input asp-for="Name" class="form-control" readonly />
    </div>
    <div class="form-group mb-4">
        <label class="col-form-label" asp-for="CreateAt"></label>
        <input asp-for="CreateAt" class="form-control" readonly />
    </div>
</div>
<div class="d-flex justify-content-start gap-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-light">Back to List</a>
</div>
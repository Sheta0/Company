@model Department

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center my-4">Delete Department</h1>

<div class="container">
    <form asp-action="Delete">
        <div class="form-group">
            <label class="col-form-label" asp-for="Code"></label>
            <input asp-for="Code" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label class="col-form-label" asp-for="Name"></label>
            <input asp-for="Name" class="form-control" readonly />
        </div>
        <div class="form-group mb-4">
            <label class="col-form-label" asp-for="CreateAt"></label>
            <input asp-for="CreateAt" class="form-control" readonly />
        </div>

        <div class="d-flex justify-content-start gap-3">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>


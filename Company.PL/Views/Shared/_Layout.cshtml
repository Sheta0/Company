<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Company Management</title>
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Fira+Code:wght@400;500&display=swap" rel="stylesheet">
    <!-- FontAwesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <!-- CSS -->
    <link rel="stylesheet" href="~/css/nova.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/nova-layout.css" asp-append-version="true" />
</head>
<body>
    <div class="nova-app">
        <header class="nova-app-header">
            <div class="nova-app-header-inner">
                <div class="nova-brand">
                    <i class="fas fa-building"></i>
                    <span>Company</span>
                </div>
                <div class="nova-topnav">
                    <a asp-controller="Account" asp-action="SignOut" class="nova-btn nova-btn-outline">
                        <i class="fas fa-sign-out-alt"></i>
                    </a>
                </div>
            </div>
        </header>

        <div class="nova-app-wrapper">
            <aside class="nova-sidebar">
                <ul class="nova-sidebar-menu">
                    <li class="nova-sidebar-item">
                        <a asp-area="" asp-controller="Home" asp-action="Index" class="nova-sidebar-link">
                            <i class="fas fa-home"></i>
                            <span>Home</span>
                        </a>
                    </li>
                    <li class="nova-sidebar-item">
                        <a asp-area="" asp-controller="Department" asp-action="Index" class="nova-sidebar-link">
                            <i class="fas fa-briefcase"></i>
                            <span>Departments</span>
                        </a>
                    </li>
                    <li class="nova-sidebar-item">
                        <a asp-area="" asp-controller="Employee" asp-action="Index" class="nova-sidebar-link">
                            <i class="fas fa-users"></i>
                            <span>Employees</span>
                        </a>
                    </li>
                    <li class="nova-sidebar-item">
                        <a asp-area="" asp-controller="User" asp-action="Index" class="nova-sidebar-link">
                            <i class="fas fa-user"></i>
                            <span>Users</span>
                        </a>
                    </li>
                    <li class="nova-sidebar-item">
                        <a asp-area="" asp-controller="Role" asp-action="Index" class="nova-sidebar-link">
                            <i class="fas fa-user-tag"></i>
                            <span>Roles</span>
                        </a>
                    </li>
                </ul>
            </aside>

            <main class="nova-main">
                <script src="~/lib/jquery/dist/jquery.min.js"></script>
                @RenderBody()
            </main>
        </div>

        <footer class="nova-footer">
            <p>&copy; @DateTime.Now.Year - Company Management System</p>
        </footer>
    </div>


    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

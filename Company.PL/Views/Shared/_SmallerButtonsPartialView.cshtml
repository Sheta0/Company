@model string

<div class="nova-flex nova-gap-2">
    <a asp-action="Details" asp-route-id="@Model" class="nova-btn nova-btn-sm nova-btn-outline">
        <i class="fas fa-info-circle"></i>
    </a>
    <a asp-action="Edit" asp-route-id="@Model" class="nova-btn nova-btn-sm nova-btn-primary">
        <i class="fas fa-edit"></i>
    </a>
    <a asp-action="Delete" asp-route-id="@Model" class="nova-btn nova-btn-sm nova-btn-danger">
        <i class="fas fa-trash"></i>
    </a>
</div>
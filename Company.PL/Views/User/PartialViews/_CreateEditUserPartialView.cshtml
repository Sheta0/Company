@model UserToReturnDTO

<div class="nova-grid" style="grid-template-columns: repeat(2, 1fr); gap: 1rem;">
    <div class="nova-form-group">
        <label asp-for="FirstName" class="nova-form-label"></label>
        <input asp-for="FirstName" class="nova-input" />
        <span asp-validation-for="FirstName" class="nova-validation-error"></span>
    </div>

    <div class="nova-form-group">
        <label asp-for="LastName" class="nova-form-label"></label>
        <input asp-for="LastName" class="nova-input" />
        <span asp-validation-for="LastName" class="nova-validation-error"></span>
    </div>

    <div class="nova-form-group">
        <label asp-for="UserName" class="nova-form-label"></label>
        <input asp-for="UserName" class="nova-input" />
        <span asp-validation-for="UserName" class="nova-validation-error"></span>
    </div>

    <div class="nova-form-group">
        <label asp-for="Email" class="nova-form-label"></label>
        <input asp-for="Email" class="nova-input" />
        <span asp-validation-for="Email" class="nova-validation-error"></span>
    </div>
</div>

